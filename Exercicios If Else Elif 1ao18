#Exercicio 13
print('\n Calcule a média ponderada, a primeira e a segunda tem peso 1\n'
'a terceira tem peso 2')
nota1 = float(input('Entre com a primeira nota: '))
nota2 = float(input('Entre com a segunda nota: '))
nota3 = float(input('Entre com a terceira nota: '))
media = ((nota1 * 0.25) + (nota2 * 0.25) + (nota3 * 0.50))
if media < 5:
    print(f'Reprovado, {media}')
else:
    print(f'Aprovado, {media}')

lin()
lin()

#Exercicio 14
print('\n Media de 3 notas, laboratorio peso 2, avaliação semestral\n'
'peso 3, e avaliação final peso 5')
nota1 = float(input('Entre com a primeira nota: '))
nota2 = float(input('Entre com a segunda nota: '))
nota3 = float(input('Entre com a terceira nota: '))
media = ((nota1 * 0.2) + (nota2 * 0.3) + (nota3 * 0.50))
if media <= 10 and media > 5:
    print(f'Aprovado, {media}')
elif media <= 4.9 and media > 2.9:
    print(f'Recuperação {media}')
elif media <= 2.9:
    print(f'Reprovado {media}')
else:
    print(f'Aprovado, {media}')
lin()
lin()

