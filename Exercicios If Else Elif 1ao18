#Exercicio 11
print('\n Entre com um numero inteiro maior que 0 e devolva\n'
'a soma de todos os algarismos')
num = int(input('Entre com o numero: '))

if num > 0:
    soma = 0
    while num != 0:
        resto = num % 10
        num = (num - resto)  / 10
        soma = soma + resto
    print(f'Soma: {soma}')
else:
    print('Numero invalido')

lin()
lin()

