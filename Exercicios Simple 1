#Exercicio1 leia n° int e print

num = int(input('Entre com o numero: '))
print(f'Numero digitado {num}')

#Exercicio2 leia n° real e print
num1 = float(input('Entre com um numero real: '))
print(f'Numero digitado {num1}')

#Exercicio3 leia 3 numeros int, some e imprima
num2 = int(input('Entre com o primeiro numero inteiro: '))
num3 = int(input('Entre com o segundo numero inteiro: '))
num4 = int(input('Entre com o terceiro numero inteiro: '))
soma = num2 + num3 + num4
print(f'Soma de {num2} + {num3} + {num4} = {soma}')

#exercicio4 Leia um num real e print ao quadrado

num5 = float(input('Entre com o numero real²: '))
print(f'numero {num5} ao quadrado = {num5 ** 2}')

#exercicio5 leia um num real e print a quinta parte deste num

num6 = float(input('Entre com o numero real divide 5 : '))
divisao = num6 // 5
print(f'Numro {num6} dividido por 5 = {divisao}')

#Exercicio6 Leia a temp em C° e converta para F°

print('Exercicio 6 Leia a temp em C° e converta para F°')
c1 = float(input('Entre com a temperatura em Celsius: '))
f1 = c1 * (9.0 / 5.0 ) + 32.0
print(f'Temperatura em Fahrenheit {f1}')

#Exercicio7 Leia a tem em F° e converta para C

print('Exercicio 7 Leia a tem em F° e converta para C°')
f2 = float(input('Entre com a temperatura em Fahrenheit: '))
c2 = 5.0 * (f2 - 32.0) / 9.0
print(f'A temperatura em Celsius é {c2}')

#Exercicio 8 leia em Kelvin e converta para C°

print('Exercicio 8 Entre com a temperatura em Kelvin e converta para Celsius')
k1 = float(input('Entre com a temperatura K°: '))
c3 = k1 - 273.15
print(f'Temperatura em C° é {c3}')

#Exercicio 9 Leia em Celsius e converta pra Kelvin

print('Exercicio 9 Converta Celsius pra Kelvin')
c4 = float(input('Entre com a temperatura em Celsius: '))
k2 = c4 + 273.15
print(f'A temperatura em Kelvin é {k2}')

#Exercicio10 Converta Km/h em m/s

print('Converta km/h em m/s')
km1 = float(input('Entre com km/h: '))
m = km1 / 3.6
print(f'Velocidade é de {m} m/s')

#Exercicio11 Coverta m/s em Km/h

print('Coverta m/s em Km/h')
m1 = float(input('Entre com M/s: '))
km2 = m1 * 3.6
print(f'Velocidade é {km2} Km/h')

#Exercicio12 Leia em milhas e converta para quilometros

print('Converta de milhas para quilometros')
m2 = float(input('Entre com as milhas: '))
km3 = 1.61 * m2
print(f'A distancia é de {km3} quilometros')

#Exercicio13 Leia em quilometros e converta para milhas

print('Converta de quilometros para milhas')
km4 = float(input('Entre com os quilometros: '))
m3 = km4 / 1.61
print(f'A distancia é de {m3} milhas')

