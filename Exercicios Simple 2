#Exercicio6 Leia a temp em C° e converta para F°

print('Exercicio 6 Leia a temp em C° e converta para F°')
c1 = float(input('Entre com a temperatura em Celsius: '))
f1 = c1 * (9.0 / 5.0 ) + 32.0
print(f'Temperatura em Fahrenheit {f1}')

#Exercicio7 Leia a tem em F° e converta para C

print('Exercicio 7 Leia a tem em F° e converta para C°')
f2 = float(input('Entre com a temperatura em Fahrenheit: '))
c2 = 5.0 * (f2 - 32.0) / 9.0
print(f'A temperatura em Celsius é {c2}')

#Exercicio 8 leia em Kelvin e converta para C°

print('Exercicio 8 Entre com a temperatura em Kelvin e converta para Celsius')
k1 = float(input('Entre com a temperatura K°: '))
c3 = k1 - 273.15
print(f'Temperatura em C° é {c3}')

#Exercicio 9 Leia em Celsius e converta pra Kelvin

print('Exercicio 9 Converta Celsius pra Kelvin')
c4 = float(input('Entre com a temperatura em Celsius: '))
k2 = c4 + 273.15
print(f'A temperatura em Kelvin é {k2}')
