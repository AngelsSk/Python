import math
"""

Aqui importaremos a biblioteca Math pois as formulas se tornaram mais complexas e
como iremos trabalha com graus angulos e radianos para facilitar a formulação da 
conta usaremos a biblioteca matematica
pi = 3.14 caso não queira importar a biblioteca

"""
#Exercicio14 Leia um angulo em graus e apresente-o convertido em radianos

print('Converta graus em radianos')
g1 = float(input('Entre com o angulo em graus: '))
r1 = ( g1 * math.pi ) / 180  #Pi = 3.14
print(f'{r1} Radianos')

#Exercicio15 Leia em radianos e converta para graus

print('Converta radianos em graus')
r2 = float(input('Entre com o radiano: '))
g2 = ( r2 * 180 ) / math.pi  #Pi = 3.14
print(f'{g2} Graus')

#Exercicio16 Coverta polegadas para centimetros

print('Converta polegadas para centimetros')
p1 = float(input('Entre com as polegadas: '))
c1 = p1 * 2.54
print(f'{c1} Centimetros')

#Exercicio17 Converta centimetros para polegadas

print('Converta centimetros para polegadas')
c2 = float(input('Entre com os centimetros: '))
p2 = c2 / 2.54
print(f'{p2} Polegadas')

#Exercicio18 leia um volume em cubicos e converta para litros

print('Coverta de Cubicos para Litros')
cb1 = float(input('Entre com o valor em cubicos: '))
lt1 = 1000 * cb1
print(f'{lt1} Litros')

#Exercicio19 Leia em litros e converta para cubicos

print('Converta litros para cubicos')
lt2 = float(input('Entre com o valor em litros: '))
cb2 = lt2 / 1000
print(f'{cb2} Cubicos')

#Exercicio20 Leia massa em quilogramas e converta para libras
print('Converta quilograma para Libras'
      'Ex: 1kg = 1000 quilogramas')
kl1 = float(input('Entre com o peso em quilogramas: '))
lb1 = kl1 / 0.45
print(f'{lb1} Libras')

#Exercicio21
print('Converta libras para quilogramas')
lb1 = float(input('Entre com o peso em libras: '))
ql1 = lb1 * 0.45
print(f'{ql1} quilogramas')

#Exercicio22
print('Converta Jardas para Metros')
jd1 = float(input('Entre com o valor em jardas: '))
mt1 = 0.91 * jd1
print(f'{mt1} Metros')

#Exercicio23
print('Converta Metros para Jardas')
mt2 = float(input('Entre com o valor em metros: '))
jd2 = mt2 / 0.91
print(f'{jd2} Jardas')

#Exercicio24
print('Converta metros quadrados para acres')
mt3 = float(input('Entre com o valor em metros quadrados: '))
ac1 = mt3 * 0.000247
print(f'{ac1} Acres')

#Exercicio25
print('Converta acres para metros quadrados')
ac2 = float(input('Entre com o valor em ACres: '))
mt4 = ac2 * 4048.58
print(f'{mt4} Metros quadrados')

#Exercicio26
print('Converta M² em Hectares')
mt5 = float(input('Entre com o valor em metros quadrados: '))
hc1 = mt5 * 0.0001
print(f'{hc1} Hectares')

#Exercicio27
print('Converta Hectares em M²')
hc2 = float(input('Entre com o valor em Hectares: '))
mt6 = hc2 * 10000
print(f'{mt6} Metros quadrados')

#Exercicio28
print('Leia 3 valore e apresente a soma do quadrado destes numeros')
num1 = float(input('Entre com o primeiro valor: '))
num2 = float(input('Entre com o segundo valor: '))
num3 = float(input('Entre com o terceiro valor: '))
soma = (num1 ** 2) + (num2 ** 2) + (num3 ** 2)
print(f'A soma do quadrado é {soma} ')

#Exercicio29
print('Leia 4 notas e calcule a nota aritimetica')
n1 = float(input('Entre com a primeira nota: '))
n2 = float(input('Entre com a segunda nota: '))
n3 = float(input('Entre com a terceira nota: '))
n4 = float(input('Entre com a quarta nota: '))
media = (n1 + n2 + n3 + n4) / 4
print(f'Sua média é de {media}')

#exercicio30
print('Leia um valor em real e um valor em dolar e faça a converção')
real = float(input('Entre com o valor em Real (R$) : '))
dolar = float(input('Entre com o valor do Dolar: '))
cot = dolar / real
print(f'{cot}')
